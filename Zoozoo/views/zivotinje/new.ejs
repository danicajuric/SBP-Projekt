<!-- views/zivotinje/new.ejs -->

<!DOCTYPE html>
<html>
<head>
    <title>Dodaj novu životinju</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>
<body>
    <div class="header header-pages">
        <div class="sides">
            <span class="logo"><a href="/">ADMIN</a></span>
        </div>
        <div class="sides" id="zoo-navigation">
            <ul class="menu">
                <!-- Ostatak koda između -->
                <li class="menu-item">
                    <a href="#">Životinje</a>
                    <ul class="dropdown">
                        <li><a href="/podrucja">Područja zoološkog</a></li>
                        <li><a href="/smjestaj">Smještaji</a></li>
                        <li><a href="/vrste_zivotinja">Vrste životinja</a></li>
                        <li><a href="/zivotinje">Životinje u našem zoološkom</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="zoo-spacing-edit">
        <div class="image-side-zoo">
            <h1>NOVO</h1>
        </div>
        <div class="text-side-zoo">
            <h2>Dodaj novu životinju</h2>
            <form class="zoo-edit-view-form" action="/zivotinje" method="POST">
                <label for="Ime">Ime:</label>
                <input type="text" id="Ime" name="Ime" required>
                <br>
                <label for="Datum_rodjenj">Datum rođenja:</label>
                <input type="date" id="Datum_rodjenj" name="Datum_rodjenj" required>
                <br>
                <label for="Zemlje_podrijetla">Zemlja podrijetla:</label>
                <input type="text" id="Zemlje_podrijetla" name="Zemlje_podrijetla" required>
                <br>
                <label for="Datum_nabavke">Datum nabavke:</label>
                <input type="date" id="Datum_nabavke" name="Datum_nabavke" required>
                <br>
                <label for="Posebne_napomene">Posebne napomene:</label>
                <textarea id="Posebne_napomene" name="Posebne_napomene"></textarea>
                <br>
                <label for="Smjestaj">Smještaj:</label>
                <select id="Smjestaj" name="Smjestaj" required>
                    <% smjestaji.forEach(smjestaj => { %>
                        <option value="<%= smjestaj._id %>"><%= smjestaj.Naziv %></option>
                    <% }) %>
                </select>
                <br>
                <button type="submit">Dodaj</button>
            </form>
        </div>
    </div>
</body>
</html>
