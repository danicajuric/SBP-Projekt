<!-- views/smjestaj/edit.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Smještaj</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>

<body>
    <div class="header header-pages">
        <div class="sides">
            <span class="logo"><a href="/">ADMIN</a></span>
        </div>
        <div class="sides" id="zoo-navigation">
            <ul class="menu">
                <li class="menu-item">
                    <a href="#">Ulaznice</a>
                    <ul class="dropdown">
                        <li><a href="/ulaznice">Evidencija ulaznica</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="#">Održavanje</a>
                    <ul class="dropdown">
                        <li><a href="/odrzavanje">Evidencija održavanja</a></li>
                        <li><a href="/vrsta_odrzavanja">Vrste održavanja</a></li>
                        <li><a href="/hrana">Dostupni resursi</a></li>
                        <li><a href="/hranjenje">Evidentiraj potrošene resurse</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="#">Zaposlenici</a>
                    <ul class="dropdown">
                        <li><a href="/zaposlenici">Popis zaposlenika</a></li>
                        <li><a href="/pozicija">Pozicije</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="#">Životinje</a>
                    <ul class="dropdown">
                        <li><a href="/podrucja">Područja zoološkog</a></li>
                        <li><a href="/smjestaj">Smještaji</a></li>
                        <li><a href="/vrste_zivotinja">Vrste životinja</a></li>
                        <li><a href="/zivotinje">Životinje u našem zoološkom</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div class="zoo-spacing-edit">
        <div class="image-side-zoo">
            <h1>Edit</h1>
        </div>
        <div class="text-side-zoo">
            <h2>Smještaj</h2>
            <form class="zoo-edit-view-form" action="/smjestaj/<%= smjestaj._id %>" method="post">
                <input type="hidden" name="_method" value="PUT">
                <label for="Naziv">Naziv:</label>
                <input type="text" id="Naziv" name="Naziv" value="<%= smjestaj.Naziv %>" required>
                <br>
                <label for="Kapacitet">Kapacitet:</label>
                <input type="number" id="Kapacitet" name="Kapacitet" value="<%= smjestaj.Kapacitet %>" required>
                <br>
                <label for="Podrucje">Područje:</label>
                <select id="Podrucje" name="Podrucje" required>
                    <% podrucja.forEach(podrucje=> { %>
                        <option value="<%= podrucje._id %>" <%=smjestaj.Podrucje.equals(podrucje._id) ? 'selected' : ''
                            %>><%= podrucje.Naziv %>
                        </option>
                        <% }); %>
                </select>
                <br>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>

</html>