<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Ulaznica</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>

<body>
    <div class="header header-pages">
        <div class="sides">
            <span class="logo"><a href="/">ADMIN</a></span>
        </div>
        <div class="sides" id="zoo-navigation">
            <ul class="menu">
                <li class="menu-item"><a href="#">Ulaznice</a></li>
                <!-- Other menu items -->
            </ul>
        </div>
    </div>
    <div class="zoo-spacing-edit">
        <div class="image-side-zoo">
            <h1>Edit Ulaznica</h1>
        </div>
        <div class="text-side-zoo">
            <h2>Ulaznica</h2>
            <form class="zoo-edit-view-form" action="/ulaznice/<%= ulaznica._id %>/edit" method="post">
                <label for="Cijena">Cijena:</label>
                <input type="number" id="Cijena" name="Cijena" value="<%= ulaznica.Cijena %>" required>
                <br>
                <label for="Datum_prodaje">Datum prodaje:</label>
                <input type="date" id="Datum_prodaje" name="Datum_prodaje" value="<%= ulaznica.Datum_prodaje.toISOString().split('T')[0] %>" required>
                <br>
                <label for="Datum_dolaska">Datum dolaska:</label>
                <input type="date" id="Datum_dolaska" name="Datum_dolaska" value="<%= ulaznica.Datum_dolaska.toISOString().split('T')[0] %>" required>
                <br>
                <label for="Zaposlenik">Zaposlenik:</label>
                <select id="Zaposlenik" name="Zaposlenik" required>
                    <% zaposlenici.forEach(function(zaposlenik) { %>
                        <option value="<%= zaposlenik._id %>" <%= ulaznica.Zaposlenik.toString() === zaposlenik._id.toString() ? 'selected' : '' %>>
                            <%= zaposlenik.Ime_i_prezime %>
                        </option>
                    <% }); %>
                </select>
                <br>
                <button type="submit">Update Ulaznica</button>
            </form>
        </div>
    </div>
</body>

</html>

